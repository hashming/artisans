<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.duoduo.hashming.artisan.dao.UserDao">

    <resultMap id="BaseResultMap" type="com.duoduo.hashming.artisan.entity.User">
        <!--@Table user-->
        <result property="id" column="ID" jdbcType="INTEGER"/>
        <result property="accountId" column="ACCOUNT_ID" jdbcType="VARCHAR"/>
        <result property="name" column="NAME" jdbcType="VARCHAR"/>
        <result property="token" column="TOKEN" jdbcType="VARCHAR"/>
        <result property="gmtCreate" column="GMT_CREATE" jdbcType="INTEGER"/>
        <result property="gmtModified" column="GMT_MODIFIED" jdbcType="INTEGER"/>
        <result property="bio" column="bio" jdbcType="VARCHAR"/>
        <result property="avatarUrl" column="avatar_url" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="BaseResultMap">
        select
          ID, ACCOUNT_ID, NAME, TOKEN, GMT_CREATE, GMT_MODIFIED, bio, avatar_url
        from hh_demo.user
        where ID = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="BaseResultMap">
        select
          ID, ACCOUNT_ID, NAME, TOKEN, GMT_CREATE, GMT_MODIFIED, bio, avatar_url
        from hh_demo.user
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="BaseResultMap">
        select
          ID, ACCOUNT_ID, NAME, TOKEN, GMT_CREATE, GMT_MODIFIED, bio, avatar_url
        from hh_demo.user
        <where>
            <if test="id != null">
                and ID = #{id}
            </if>
            <if test="accountId != null and accountId != ''">
                and ACCOUNT_ID = #{accountId}
            </if>
            <if test="name != null and name != ''">
                and NAME = #{name}
            </if>
            <if test="token != null and token != ''">
                and TOKEN = #{token}
            </if>
            <if test="gmtCreate != null">
                and GMT_CREATE = #{gmtCreate}
            </if>
            <if test="gmtModified != null">
                and GMT_MODIFIED = #{gmtModified}
            </if>
            <if test="bio != null and bio != ''">
                and bio = #{bio}
            </if>
            <if test="avatarUrl != null and avatarUrl != ''">
                and avatar_url = #{avatarUrl}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into hh_demo.user(ACCOUNT_ID, NAME, TOKEN, GMT_CREATE, GMT_MODIFIED, bio, avatar_url)
        values (#{accountId}, #{name}, #{token}, #{gmtCreate}, #{gmtModified}, #{bio}, #{avatarUrl})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update hh_demo.user
        <set>
            <if test="accountId != null and accountId != ''">
                ACCOUNT_ID = #{accountId},
            </if>
            <if test="name != null and name != ''">
                NAME = #{name},
            </if>
            <if test="token != null and token != ''">
                TOKEN = #{token},
            </if>
            <if test="gmtCreate != null">
                GMT_CREATE = #{gmtCreate},
            </if>
            <if test="gmtModified != null">
                GMT_MODIFIED = #{gmtModified},
            </if>
            <if test="bio != null and bio != ''">
                bio = #{bio},
            </if>
            <if test="avatarUrl != null and avatarUrl != ''">
                avatar_url = #{avatarUrl},
            </if>
        </set>
        where ID = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from hh_demo.user where ID = #{id}
    </delete>

</mapper>